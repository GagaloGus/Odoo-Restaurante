<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vamos a definir la vista (Tree) -->
    <record id="view_modulo_categorias_tree" model="ir.ui.view">
        <field name="name">restaurante.categoria.tree</field> 
        <field name="model">restaurante.categoria</field> 
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <!-- <field name="description"/>  -->
                <field name="active"/> 
                <!-- <field name="imagen"/>  -->
            </tree>
        </field> 
    </record>

    <!-- Vamos a definir la vista formulario (Form) -->
    <record id="view_modulo_categorias_form" model="ir.ui.view">
        <field name="name">restaurante.categoria.form</field>
        <field name="model">restaurante.categoria</field> 
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/> 
                        <!-- <field name="imagen"/>  -->
                    </group>

                    <group>
                        <field name="description"/> 
                    </group>
                </sheet>
            </form>
        </field> 
    </record>
</odoo>