<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!--Aqui definimos template Qweb para Equipos-->
  <template id="web_equipo_list" name="Web Lista Equipo">
      <t t-call="website.layout">
        <div class="container mt-4">
          <h1>Equipo</h1>
          <!--Cards de equipos-->
          <div class="row mt-3">
            
            <t t-foreach="miembros" t-as="m">
              <div class="col-12 col-md-6 col-lg-4 mb-3">
                <div class="card h-100">
                  <t t-if="m.foto">
                    <img class="card-img-top"
                      t-att-src="'data:image/png;base64,%s' %m.foto"
                      alt="Foto"/>
                  </t>

                  <div class="card-body">
                    <h5 class="card-title" t-esc="m.name"/>
                    <p class="card-text">
                        <!--or '' evita errores si el campo esta vacio-->
                        <strong>Rol</strong><t t-esc="m.rol or ''"/><br/>
                      </p>
                      <!--Genera URLS -->
                      <a class="btn btn-primary" t-att-href="'/equipo/%s' % m.id">
                        ver detalle
                      </a>
                  </div>

                </div>

              </div>
            </t>

          </div>
        </div>
      </t>
  </template>

  <template id="web_equipo_detail" name="Web Detalle Equipo">
      <t t-call="website.layout">
        <div class="container mt-4">
          <a href ="/equipo" class="btn btn-link">Volver</a>

          <h1 class="mt-2" t-esc="miembro.name"/>
          <ul class="list-group mt-3">
            <li class="list-group-item"><strong>Rol</strong> <t t-esc="miembro.rol or ''"/></li>
            <li class="lis-group-item"><strong>Descripci√≤n</strong> <t t-esc="miembro.description or ''"/></li>
          </ul>

          <t t-if="miembro.foto">
            <img class="img-fluid mt-3"
              t-att-scr="'data:image/png;base64,%s' % miembro.foto"
              alt="Foto"/>
          </t>
        </div>
      </t>
   </template> 
</odoo>
