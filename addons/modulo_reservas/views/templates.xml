<odoo>
    <template id="reservas_template" name="Reservas Web">
        <t t-call="website.layout">
            <div class="container mt-5">
                <h1>Reservas</h1>
                <t t-foreach="reservas" t-as="reserva">
                    <div class="card mb-3 p-3">
                        <p><strong>Nombre:</strong> <span t-esc="reserva.name"/></p>
                        <p><strong>Fecha y hora:</strong> <span t-esc="reserva.fecha_reserva"/></p>
                        <p><strong>Comensales:</strong> <span t-esc="reserva.n_personas"/></p>
                        <p><strong>Descripci√≥n:</strong> <span t-esc="reserva.description"/></p>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
