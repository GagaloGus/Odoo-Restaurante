<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista Tree (lista) -->
    <record id="view_modulo_reservas_tree" model="ir.ui.view">
        <field name="name">modulo_reservas.tree</field>
        <field name="model">modulo_reservas.modulo_reservas</field>
        <field name="arch" type="xml">
            <tree string="Reservas">
                <field name="name"/>
                <field name="fecha_reserva"/>
                <field name="n_personas"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario -->
    <record id="view_modulo_reservas_form" model="ir.ui.view">
        <field name="name">modulo_reservas.form</field>
        <field name="model">modulo_reservas.modulo_reservas</field>
        <field name="arch" type="xml">
            <form string="Reserva">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="fecha_reserva"/>
                        <field name="n_personas"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
